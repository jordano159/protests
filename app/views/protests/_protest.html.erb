<div id="<%= dom_id protest %>" class="card text-center shadow-2xl w-50">
  <figure class="px-10 pt-10">
    <% if protest.images.first&.representable? %>
      <%= image_tag protest.images.first.variant(resize_to_limit: [500, 500]) %>
    <% else %>
      <img src="https://picsum.photos/id/1005/400/250" class="rounded-xl">
    <% end %>
  </figure>
  <div class="card-body">
    <h2 class="card-title"><%= protest.description %></h2> 

    <div class="card-text my-5"><%= protest.location %></div>
    <% if protest.is_repeated %>
      <div class="card-text my-5">אירוע מספר <%= protest.num_in_series %></div>
    <% end %>
    <div class="card-text my-5"><%= protest.kind %></div>
    <div class="card-text my-5"><%= protest.present %> השתתפו</div>
    <div class="card-text my-5">
      <div><%= protest.contact_name %></div>
      <div><%= protest.contact_phone %></div>
      <div><%= protest.contact_organization %></div>
    </div>

  <% if action_name != "show" %>
    <div class="justify-center card-actions">
      <%= link_to "מידע נוסף", protest, class: "btn btn-primary" %>
      <%= link_to 'עריכה', edit_protest_path(protest), class: "btn btn-ghost" %>
    </div>
  <% end %>
  </div>
</div>
