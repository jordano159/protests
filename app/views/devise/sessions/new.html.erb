<h2 class="text-center mx-5 font-bold text-3xl">כניסה לניהול מערכת</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="my-5">
    <%= f.label :email, "אימייל" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= f.label :password, "סיסמה" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="my-5">
      <%= f.check_box :remember_me, class: "blosck mt-2 h-5 w-5" %>
      <%= f.label :remember_me, "זכרו אותי" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "כניסה", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
